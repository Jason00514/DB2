CREATE SERVER ステートメント - DB2 ラッパーの場合の例
CREATE SERVER DB2SERVER TYPE DB2/CS VERSION 9.7 WRAPPER DRDA
       AUTHORIZATION "spalten" PASSWORD "db2guru" 
       OPTIONS (DBNAME 'CLNTS390', CPU_RATIO '0.001')


